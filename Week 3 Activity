while True:
    password = input("Enter a password: ")
    
    has_letter = False
    for char in password:
        if char.isalpha():
            has_letter = True
            break
    
    has_number = False
    for char in password:
        if char.isdigit():
            has_number = True
            break
    
    if has_letter and has_number:
        print("Password accepted.")
        break
    else:
        print("Invalid password. Try again.")
        continue
